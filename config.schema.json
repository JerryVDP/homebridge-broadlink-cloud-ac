{
    "pluginAlias": "AuxCloudPlatform",
    "pluginType": "platform",
    "singular": true,
    "schema": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Platform Name",
          "type": "string",
          "required": true,
          "default": "AUX Cloud",
          "description": "Name for this platform instance"
        },
        "email": {
          "title": "AUX Cloud Email",
          "type": "string",
          "required": true,
          "format": "email",
          "placeholder": "your@email.com"
        },
        "password": {
          "title": "AUX Cloud Password",
          "type": "string",
          "required": true,
          "placeholder": "Your AUX Cloud password"
        },
        "region": {
          "title": "Region",
          "type": "string",
          "required": false,
          "enum": ["eu", "usa", "cn"],
          "default": "eu",
          "description": "Select your AUX Cloud region"
        },
        
        "hiddenDevices": {
          "title": "Hidden Devices",
          "type": "array",
          "items": {
            "type": "string",
            "title": "Device ID"
          },
          "description": "List of device endpoint IDs or friendly names to hide from HomeKit"
        },
        "discoveryInterval": {
          "title": "Discovery Interval (minutes)",
          "type": "number",
          "minimum": 0,
          "default": 0,
          "description": "How often to check for new devices (0 = disabled, only discover on startup)"
        }
      }
    },
    "form": null,
    "display": null
  }